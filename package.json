{
  "name": "whatsapp",
  "version": "1.0.1-beta",
  "description": "fast, simple, secure messaging and calling for free*, available on phones all over the world.",
  "main": "app/main.js",
  "maintainers": ["Kerron Gordon"],
  
  "author": {
    "name": "Kerron Gordon",
    "email": "kgpsounds.com@gmail.com",
    "url": "https://kerron-gordon.firebaseapp.com"
  },
  "license": "MIT",
  "homepage": "https://kerron-gordon.firebaseapp.com",
  "build": {
    "appId": "com.github.kerrongordon.whatsapp",
    "productName": "WhatsApp",

    "linux": {
      "category": "Network",
      "icon": "app/icon/",
      "target": [
        "zip",
        "deb",
        "rpm",
        "tar.gz",
        "tar.xz",
        "AppImage"
      ]
    }
  },
  "scripts": {
    "build": "tsc",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "start": "npm run build && electron ./app/main.js",
    "prod": "build --linux"
  },
  "devDependencies": {
    "electron": "^1.7.11",
    "electron-builder": "^19.55.2",
    "tslint": "^5.9.1",
    "typescript": "^2.6.2"
  }
}
