{
    "name": "whatsapp-linux",
    "dependencies": {
        "electron": "^1.6.3",
        "electron-context-menu": "^0.8.0"
    },
    "scripts": {
        "start": "electron .",
        "ep": "electron-packager . --platform linux --arch x64 --out releases/ --asar --icon resources/icon/64/whatsapp.png",
        "deb64": "electron-installer-debian --dest releases/deb/ --arch amd64 --config config-deb.json",
        "rpm64": "electron-installer-redhat --dest releases/rpm/ --arch x86_64 --config config-rpm.json",
        "build": "rm -rf releases && npm run ep"
    },
    "main": "main.js",
    "version": "0.1.2",
    "license": "MIT",
    "description": "WhatsApp is a minimal Electron application build for linux using the whatsapp website",
    "author": "KerronGordon",
    "repository": {
        "type": "git",
        "url": "git@github.com:kerrongordon/whatsapp-linux.git"
    },
    "devDependencies": {
        "electron-installer-debian": "^0.5.1",
        "electron-installer-redhat": "^0.4.0",
        "electron-packager": "^8.6.0"
    }
}